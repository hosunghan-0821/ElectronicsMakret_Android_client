<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textview_border"
    android:layout_margin="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerview_buyer_choice_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:foregroundGravity="center"
        app:civ_border_color="@color/black"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/recyclerview_buyer_choice_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="회원 닉네임"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/recyclerview_buyer_choice_profile_image"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_buyer_choice_profile_image" />

    <TextView
        android:textColor="#808080"
        android:textSize="15dp"
        android:id="@+id/recyclerview_buyer_choice_last_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="마지막대화"
        app:layout_constraintStart_toEndOf="@+id/recyclerview_buyer_choice_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_buyer_choice_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>