<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="10dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/imageview_border_gray"
        android:id="@+id/post_write_recyclerview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView

        android:id="@+id/post_write_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="@+id/post_write_recyclerview_image"
        app:layout_constraintTop_toTopOf="@+id/post_write_recyclerview_image">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>